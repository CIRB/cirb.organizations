<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
lang="en"
metal:use-macro="here/main_template/macros/master"
i18n:domain="cirb.organizations">
<body>

<div metal:fill-slot="main">
    <table>
    <tbody>
        <tr>
            <th>Name</th>
            <th>Trans</th>
        </tr>
        <tr tal:repeat="orga view/manage">
            <td>
                <a href="" tal:attributes="href string:${context/absolute_url}/organizations_form?edit=${orga/organization_id}">
                    <span><tal:block tal:content="orga/name">name</tal:block></span>
                </a>
            </td>
            <td>
                <span tal:condition="python:len(orga.translated_organization)==0">
                   <a href="" tal:attributes="href string:${context/absolute_url}/organizations_form?trans=${orga/organization_id}"> trans </a>
                </span>

                    <tal:block tal:repeat="trans orga/translated_organization">
                        <a href="" tal:attributes="href string:${context/absolute_url}/organizations_form?edit=${trans/translated_id}&set_language=nl">
                            edit trans
                       </a>
                    </tal:block> 
            </td>
        </tr>
    </tbody>
    <table>
</div>
</body>

</html>
