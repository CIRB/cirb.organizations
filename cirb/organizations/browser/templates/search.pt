<div class="manage-orga">
    <a href="" tal:attributes="href string:${context/absolute_url}/organizations_form"><tal:block i18n:translate="add_orga"> add orga</tal:block></a>&nbsp;&nbsp;&nbsp;
    <a href="" tal:attributes="href string:${context/absolute_url}/organizations_manage"><tal:block i18n:translate="maange_orga">manage orga</tal:block></a>

<div id="search"></div>
</div>

<input type="submit" name="A" />
<a class="letters" tal:attributes="href string:${context/absolute_url}/">A</a>


<metal:use use-macro="context/@@ploneform-macros/titlelessform" />
<div tal:condition="view/get_results" class="orga_search">
    <ul>
        <li class="orga" tal:repeat="orga view/results">
            <img tal:attributes="src python:view.img('logo', orga.organization_id)" width="150px" class="fiche-img"/>
            <a tal:attributes="href string:${context/absolute_url}/org/${orga/organization_id}/oview" ><div tal:content="orga/name">name</div></a>
            <div class="address">
                <span tal:content="orga/address/num">num</span>,&nbsp;<span tal:content="orga/address/street">street</span><br />
                <span tal:content="orga/address/post_code">post_code</span>&nbsp;<span tal:content="orga/address/municipality"></span>
            </div>

            <div><span i18n:translate="TÃ©l.">tel</span><span tal:content="orga/person_contact/phone">phone</span></div>
            <div tal:content="orga/person_contact/email">email</div>
            <div tal:content="orga/website">website</div>
        </li>
    </ul>
</div>


<div class="multidata" tal:attributes="data-lang string:${context/Language}; data-absolute_url string:${view/folder_url}">
    <div id="urbis_map" style="width:350px; height:250px; border: solid #000 1px;"></div>
</div>

<div>
    <tal:block tal:repeat="cat view/get_categories">
        <input type="image" tal:attributes="src string:${context/portal_url}/++resource++cirb.organizations.img/${cat}.png; alt cat" />
    </tal:block>
    <script type="text/javascript" tal:content="structure view/js"></script>
</div>
