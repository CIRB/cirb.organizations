before languages
<div id="language-selector" i18n:domain="plone">
    <tal:language tal:define="available view/available; languages view/languages; showFlags view/showFlags;">
    <ul id="portal-languageselector" tal:condition="python:available and len(languages)>=3">
        <tal:language repeat="lang languages">
        <li tal:define="code lang/code; selected lang/selected" tal:attributes="class python: selected and 'currentLanguage' or '';">
        <a href="" tal:define="flag lang/flag|nothing; name lang/name;" tal:attributes="href view/custom_url; title lang/native">
            <img src="" alt="" lang="" tal:attributes="src string:${view/portal_url}/${code}.jpg; alt lang/native; lang code" />
        </a>&nbsp; 
        </li>
        </tal:language>
    </ul>
    </tal:language>
</div>

